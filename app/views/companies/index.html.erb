<% if user_signed_in? %>



<br/>
<div class="container">
     
<form action="<%= companies_path %>">
      <input type="text" placeholder="Enter" name="search_key" >
  <button type="submit" class="btn btn-info">Search</button>
</form>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-info">
    <tr>
      <th>Company name</th>
      <th>Country</th>
      <th>Email</th>
      
      <th>Industry</th>
      <th>Address</th>
      <th>Phone no</th>
      <th>State</th>
      <th>Township</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @companies.each do |company| %>
    <% if company.user == current_user %> 
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.country %></td>
        <td><%= company.email %></td>
        
        <td><%= company.industry %></td>
        <td><%= company.address %></td>
        <td><%= company.phone_no %></td>
        <td><%= company.state %></td>
        <td><%= company.township %></td>
        
        <td ><%= link_to 'Show', company, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class:"btn btn-info" %>
<% else -%>

<h1>Hello My App</h1>
Hi hello
<% end -%>
</div>